<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="PretestAppTheme" parent="NoActionBarTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warmBlue</item>
        <item name="colorPrimaryDark">@color/purpleishBlue</item>
        <item name="colorAccent">@color/sunYellow</item>
    </style>

    <style name="UTSButtonPrimary" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimens_32dp</item>
        <item name="android:layout_marginBottom">@dimen/dimens_24dp</item>
        <item name="android:background">@drawable/background_uts_primary_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

    <style name="UTSButtonSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimens_32dp</item>
        <item name="android:layout_marginBottom">@dimen/dimens_24dp</item>
        <item name="android:background">@drawable/background_uts_secondary_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

</resources>