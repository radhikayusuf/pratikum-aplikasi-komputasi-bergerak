<resources>

    <!-- Base application theme. -->
    <style name="PretestAppTheme" parent="NoActionBarTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLocalStoragePrimary</item>
        <item name="colorPrimaryDark">@color/colorLocalStoragePrimaryDark</item>
        <item name="colorAccent">@color/colorLocalStorageAccent</item>
    </style>

    <style name="LocalStoragePrimaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimens_32dp</item>
        <item name="android:paddingStart">@dimen/dimens_24dp</item>
        <item name="android:paddingEnd">@dimen/dimens_24dp</item>
        <item name="android:background">@drawable/background_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

</resources>
