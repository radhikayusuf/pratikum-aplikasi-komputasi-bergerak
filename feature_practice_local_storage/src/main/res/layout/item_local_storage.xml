<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimens_16dp">

            <TextView
                android:id="@+id/titleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimens_16dp"
                android:paddingEnd="@dimen/dimens_16dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_18sp"
                tools:text="Title" />

            <TextView
                android:id="@+id/notesContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:maxLength="200"
                android:paddingStart="@dimen/dimens_16dp"
                android:paddingEnd="@dimen/dimens_16dp"
                android:textSize="@dimen/size_14sp"
                tools:text="Lorem ipsum dolor sit amet" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteItem"
            android:layout_width="@dimen/dimens_48dp"
            android:layout_height="@dimen/dimens_48dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimens_16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:layout_gravity="bottom"
        android:background="@color/colorGray" />

</androidx.cardview.widget.CardView>